{
    "manifest_version": 3,
 
    "name": "Meet Discord RPC",
    "description": "Updates Discord Rich presence with the name of current meeting",
    "version": "0.0.1",
    "action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://meet.google.com/*"],
            "js": ["content.js"]
        }
    ],
    "background":{
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
     ],
     "host_permissions": [
         "https://meet.google.com/*"
     ]
}